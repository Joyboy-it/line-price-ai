# ============================================
# DATABASE
# ============================================
DATABASE_URL=postgresql://line_price:your_secure_password@localhost:5432/line_price_db

# ============================================
# NEXTAUTH
# ============================================
# Development
# NEXTAUTH_URL=http://localhost:3000
# Production (VPS)
NEXTAUTH_URL=https://your-domain.com
NEXTAUTH_SECRET=your_random_secret_key_generate_with_openssl

# ============================================
# LINE OAuth
# ============================================
LINE_CLIENT_ID=your_line_channel_id
LINE_CLIENT_SECRET=your_line_channel_secret

# ============================================
# FILE STORAGE
# ============================================
STORAGE_TYPE=local
UPLOAD_DIR=./uploads

# Alternative: MinIO/S3
# STORAGE_TYPE=s3
# S3_ENDPOINT=http://localhost:9000
# S3_BUCKET=price-images
# S3_ACCESS_KEY=minio_access_key
# S3_SECRET_KEY=minio_secret_key

# ============================================
# TELEGRAM (Optional)
# ============================================
TELEGRAM_BOT_TOKEN=your_bot_token

# ============================================
# APP CONFIG
# ============================================
MAX_UPLOAD_SIZE=5242880
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp
LOG_RETENTION_DAYS=90

# ============================================
# WEB PUSH NOTIFICATIONS (VAPID)
# ============================================
# Generate with: npx web-push generate-vapid-keys
NEXT_PUBLIC_VAPID_PUBLIC_KEY=your_vapid_public_key
VAPID_PRIVATE_KEY=your_vapid_private_key
VAPID_SUBJECT=mailto:admin@scharoenchai.com
